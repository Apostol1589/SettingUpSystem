<Window x:Class="SettingUpSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SettingUpSystem"
        mc:Ignorable="d"
        Title="Setting Up System" Height="150" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введіть пароль:" Margin="6,10,0,0" FontSize="14" Name="tbEnterPassword"/>
        <PasswordBox Name = "pbPassword" Margin="6" Grid.Row="1"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Margin="12,6,12,6" Content="Прийняти" Click="Confirm_Click"/>
            <Button Grid.Column="1" Margin="12,6,12,6" Content="Відхилити" Click="Exit_Click"/>
        </Grid>
        
    </Grid>
</Window>
